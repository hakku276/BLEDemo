<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/activity_horizontal_margin">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waiting for Status update"
        android:id="@+id/text_status"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_title"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_status"
        android:text="Fan Speed Control"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_speed"
        android:layout_marginStart="10dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@id/text_title"
        app:layout_constraintBaseline_toBaselineOf="@id/text_title"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/seekbar"
        app:layout_constraintTop_toBottomOf="@id/text_title"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/seekbar"
        android:id="@+id/button_connect"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_marginLeft="20dp"
        app:layout_constraintBaseline_toBaselineOf="@id/button_connect"
        app:layout_constraintStart_toEndOf="@id/button_connect"
        android:id="@+id/button_update"/>

</android.support.constraint.ConstraintLayout>